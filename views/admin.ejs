               </ul>
               <!-- sidebar menu end-->
            </div>
         </aside>
         <section id="main-content">
            <section class="wrapper">
               <div class="row">
                  <div class="col-md-12">
                     <div class="content-panel">
                        <table class="table table-bordered" style="margin: 1%; size: 80%; width: 98%; text-align: center;">
                           <tr>
                              <h2 style="margin-left: 20px;">View All Parkings</h2>
                           </tr>
                           <tr align="center" style="width: 80%">
                              <th style="text-align: center;">S.N </th>
                              <th style="text-align: center;">Location</th>
                              <th style="text-align: center;">Code</th>
                              <th style="text-align: center;">Slot</th>
                              <th style="text-align: center;">Price</th>
                              <th style="text-align: center;">Expected Time to be Available Again </th>
                              <th style="text-align: center;">Status </th>
                              <th style="text-align: center;">Block </th>
                           </tr>

                           <% for(var i=0; i< result.length; i++) { %>
                              <tr>
                              <td> <%= i+1 %> </td>
                              <td> <%= result[i]['loc'] %> </td>
                              <td> <%= result[i]['code'] %> </td>
                              <td> <%= result[i]['slot'] %> </td>
                              <td> <%= result[i]['price'] %> </td>

                              <%if(result[i]['et'] == 0) {%>
                                 <td>---</td>
                              <% } else {%>
                                 <td><%=result[i]['et']%></td>
                              <% }%>

                              <% if(result[i]['status'] === 1) {%>
                                 <td>Available</td>
                              <% } else if(result[i]['status'] === 2) {%>
                                 <td>Booked</td>
                              <% } else if(result[i]['status'] === 3) {%>
                                 <td>Parked</td>
                              <% } else if(result[i]['status'] === 4) {%>
                                 <td>Locked</td>
                              <% }%>



                                 <!-- <td> <%= result[i]['status'] %> </td> -->
                              <% if(result[i]['status'] === 4) {%>
                                 <td style="font-size: 140%;"><a href="/cbs/<%=result[i]['code']%>/4"><i class="fa fa-lock" style="color: red;"></i></a></td>
                              <% } else if(result[i]['status'] === 1) {%>
                                 <td style="font-size: 140%;"><a href="/cbs/<%=result[i]['code']%>/1"><i class="fa fa-unlock" style="color: green;"></i></a></td>
                              <% } else {%>
                                 <td style="font-size: 140%;"><i class="fa fa-unlock" style="color: green;"></i></td>
                              <% } %>
                              </tr>
                           <% }%>
                        </table>
                     </div>
                     <!--/content-panel -->
                  </div>
                  <!-- /col-md-12 -->
               </div>
            </section>
            <!--wrapper -->
         </section>
